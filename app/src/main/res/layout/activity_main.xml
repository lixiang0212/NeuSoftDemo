<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a3aead"
    tools:context="com.lx.neusoftdemo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

       <com.lx.neusoftdemo.MyImageView
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:src="@drawable/icon"
           android:layout_centerInParent="true"
           />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:id="@+id/a"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/main_login_bg"
            >

            <TextView
                android:text="帐号："
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:id="@+id/textView2" />

            <EditText
                android:id="@+id/et_userName"
                android:paddingLeft="10dp"
                android:hint="请输入您的手机号"
                android:background="#7da6d9"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/main_login_bg"
            android:layout_marginTop="1dp"
            >

            <TextView
                android:text="密码："
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/et_userPassword"
                android:paddingLeft="10dp"
                android:hint="请输入您的密码"
                android:background="#7da6d9"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <CheckBox
            android:id="@+id/cb_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
         <TextView
             android:layout_width="100dp"
             android:layout_height="match_parent"
             android:text="记住密码"
             android:textSize="15sp"
             android:textColor="@color/colorWhite"
             android:gravity="center_vertical"
             />
        </LinearLayout>




    </LinearLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@+id/a"
         >

         <Button
             android:id="@+id/btn_userLogin"
             android:text="登录"
             android:textSize="18sp"
             android:textColor="#fff"
             android:background="@drawable/main_login_bg"
             android:layout_width="match_parent"
             android:layout_marginTop="50dp"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8dp"
             android:layout_marginBottom="10dp"
             android:layout_height="50dp"
             />
     <TextView
         android:id="@+id/tv_userForget"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:text="忘记密码?"
         android:layout_marginLeft="15dp"
         android:layout_below="@id/btn_userLogin"
         android:textColor="@color/colorBlue"

         />
         <TextView
             android:id="@+id/tv_userApply"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:text="新用户注册"
             android:layout_marginLeft="20dp"
             android:layout_below="@id/btn_userLogin"
             android:layout_alignParentRight="true"
             android:layout_marginRight="15dp"
             android:textColor="@color/colorBlue"
             />
     </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
