<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#a3aead"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_applyBack"
            android:text="返回"
            android:paddingLeft="5dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="注册/找回密码"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/textView" />
    </LinearLayout>

    <EditText
        android:layout_marginTop="1dp"
        android:id="@+id/et_newUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="请输入手机号"
        android:paddingLeft="20dp"
        android:background="#fff"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        >
        <EditText
            android:layout_marginLeft="2dp"
            android:background="@color/colorWhite"
            android:id="@+id/et_userCode"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:hint="输入验证码"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/btn_userCode"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_margin="2sp"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/et_userCode"
            android:background="@drawable/main_login_bg"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="@color/colorBlue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="设置密码"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/et_newUserPassword"
        android:background="@color/colorWhite"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:hint="请输入密码"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="@color/colorBlue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="@color/colorWhite"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="确认密码"
            android:textSize="18sp"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/et_newUserPasswordTwo"
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:hint="请重新输入密码"
            />

    </LinearLayout>


    <Button
        android:id="@+id/btn_userApply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="确定"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@drawable/main_login_bg"
        />

</LinearLayout>